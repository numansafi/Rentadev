

<h1><strong>Bookings</strong></h2>
<div class="flex ">
  <div >
    <div class="booking-cards">
      <h2><% @bookings.each do |booking| %></h2>
          <div class="booking-card">
            <img src="https://images.unsplash.com/flagged/photo-1570612861542-284f4c12e75f?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80" alt="listing-tutor">
            <div class="booking-card-content">
            <p> Tutor: <%= "#{booking.listing.user.first_name} #{booking.listing.user.last_name}" %> </p>
            <p><%= booking.startdate.strftime("#{booking.startdate.day.ordinalize} %B %Y") %></p>
            <p>Subject: <%= booking.listing.title %> </p>
            <p>Time: <%= "#{booking.startdate.strftime("%I:%M%P")} - #{booking.finishdate.strftime("%I:%M%P")}"%></p>

            <div class="booking-card-buttons">
              <%= link_to "Edit", edit_listing_booking_path(booking.listing.id, booking), class: "card-book-button " %>
              <%= link_to "Delete", booking_path(booking), method: :delete, data: {confirm: "Are you sure?"}, class: "card-book-button "%>
            </div>
            </div>
          </div>
      <% end  %>
    </div>
  </div>
  </div>
